@model PMS.UserManage.Application.ModelDto.Account.BindInfo
@{
    ViewData["Title"] = "账号设置";
    Layout = "~/Views/Mobile/Shared/_MobileLayout.cshtml";
}
@section css{
    <link rel="stylesheet" href="@ViewBag.FileHost_M/css/mine/account-setting.css" />
}
<header class="header flex justify-content-between">
    <a class="arrow"></a>
    <span class="header-title">账号设置</span>
    <span class=""></span>
</header>
<section class="mt">
    <div class="account-msg">
        <h5 class="title">手机账号</h5>
        <div>
            <div class="phone flex">
                <i class="icon"></i>
                @if (!string.IsNullOrEmpty(Model.Mobile))
                {
                    <div class="phone-msg">
                        <div>手机号<a href="@Url.Action("BindMobile")"><i class="icon"></i>更换手机号</a></div>
                        <p>@Model.Mobile</p>
                    </div>
                }
                else
                {
                    <div class="phone-msg">
                        <div style="line-height: 2.5;">手机号</div>
                    </div>
                }
            </div>
            @if (!string.IsNullOrEmpty(Model.Mobile))
            {
                <a class="bind">已绑定</a>
            }
            else
            {
            <a href="@Url.Action("BindMobile")" class="unbound">未绑定</a>
            }
        </div>
    </div>

    <div class="other-bind">
        <h5 class="title">第三方账号绑定</h5>
        <ul class="list">
            <li class="flex justify-content-between">
                <i class="icon wechat"></i>
                <div style="line-height: 2.5;">微信</div>
                @if (!string.IsNullOrEmpty(Model.UnionID_Weixin))
                {
                    <a class="bind">已绑定</a>
                }
                else
                {
                    <a href="@Url.Action("BindWX")" class="unbound">未绑定</a>
                }
            </li>
            <li class="flex justify-content-between">
                <i class="icon qq"></i>
                <div style="line-height: 2.5;">QQ</div>
                @if (Model.UnionID_QQ!=null)
                {
                    <a class="bind">已绑定</a>
                }
                else
                {
                    <a href="@Url.Action("BindQQ")" class="unbound">未绑定</a>
                }
            </li>
            @*<li class="flex justify-content-between">
                <i class="icon weibo"></i>
                <div style="line-height: 2.5;">微博</div>
                <a class="unbound">未绑定</a>
            </li>*@
        </ul>
    </div>

    <div class="account-relevance">
        <ul>
            <li><a href="@Url.Action("ChangePSW")">密码修改<i class="arrow"></i></a></li>
            <li><a href="@Url.Action("Destroy")">注销账号<i class="arrow"></i></a></li>
        </ul>
    </div>
</section>