@using Sxb.PCWeb.Response;
@{
    Layout = null;

    int statusCode = ViewBag.StatusCode ?? 404;
    if (Context.Response.StatusCode > 0) statusCode = Context.Response.StatusCode;

}
<!DOCTYPE html>
<html lang="zh">
<head>
    <title>错误页</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="@(ViewBag.StaticFile)/css/bootstrap.css">
    <link rel="stylesheet" href="@(ViewBag.StaticFile)/css/jquery.range.css">
    <link rel="stylesheet" href="@(ViewBag.StaticFile)/css/common.css">
</head>
<body>
    <section>
        <div class="container">
            @if (statusCode == (int)ResponseCode.SchoolOffline)
            {
                <div class="error" id="errorNoSchool">
                    <img src="@(ViewBag.StaticFile)/imgs/error-noSchool.png" alt="">
                    <p>抱歉，因信息有误或学校要求，该学校已下架</p>
                    <p><i class="seconds">5</i> 秒后自动回到上一页…</p>
                    <a href="/" class="go-home">返回首页</a>
                </div>
            }
            else if (statusCode == 404 || statusCode == 500)
            {
                <div class="error" id="error404">
                    <img src="@(ViewBag.StaticFile)/imgs/error-404.png" alt="">
                    <p>抱歉，服务器开小差了</p>
                    <p><i class="seconds">5</i> 秒后自动回到首页…</p>
                    <a href="/" class="go-home">返回首页</a>
                </div>
            }
            else
            {
                <div class="error" id="errorLoading">
                    <img src="@(ViewBag.StaticFile)/imgs/error-load.png" alt="">
                    <p>网络出错啦！</p>
                </div>
            }
        </div>
    </section>
    <script src="https://cdn.sxkid.com/js/lib/jquery.js"></script>
    <script src="@ViewBag.StaticFile/js/other/error.js"></script>
</body>
</html>
