@using iSchool;
@using PMS.School.Domain.Dtos;
@using PMS.School.Domain.Common;
@model PMS.School.Domain.Dtos.SchoolExtDto
@{
    Layout = "layout_school";
    ViewBag.Title = $"{ViewBag.SchoolName}学区房划分范围_附近的学区房有哪些-上学帮";
    ViewBag.Page_Description = $"上学帮学校频道，为您提供全面的{ViewBag.SchoolName}招生简介、录取条件等信息";
    ViewBag.Page_keywords = $"{ViewBag.SchoolName}片区划分,{ViewBag.SchoolName}附近的学区房,{ViewBag.SchoolName}生活设施";
}
@section css{
    <link rel="stylesheet" href="@(ViewBag.StaticFile)/css/viewer.min.css">
    <link rel="stylesheet" href="@(ViewBag.StaticFile)/js/baseFun/gallery.css">
    <link rel="stylesheet" href="@(ViewBag.StaticFile)/css/school-detail/school-detail-message.css">
    @*<link rel="stylesheet" href="https://h5wkui.sxkid.com/css/school-detail/school-detail-message.css">*@


}

@* 左侧内容 *@
<div class="left-content">
    <div class="map position-relative">
        <div id="map-content"></div>
        @*@if (!string.IsNullOrEmpty(Model.Range))
            {
                <p class="font-13">@(Model.Range)</p>
            }*@


        <div class="map-tab position-absolute">
            <ul class="d-flex text-center position-relative font-14">

                <li class="active"><a href="@Url.Action("ExtMessage", "School", new { ExtId = Model.Range })" id="rangePart">划片范围</a></li>
                @if ((new byte[] { (byte)SchoolGrade.PrimarySchool, (byte)SchoolGrade.JuniorMiddleSchool }.Contains(Model.Grade)) && Model.Type == (byte)SchoolType.Public)
                {
                    <li style="width:104px"><a id="counterPart" href="@Url.Action("ExtMessage", "School", new { ExtId = ((List<KeyValueDto<Guid>>)ViewBag.CounterPart).FirstOrDefault()?.Value })">对口学校</a></li>
                }
                <li style="width:104px"><a id="build" href="@Url.Action("ExtMessage", "School", new { ExtId = ViewBag.Build })">周边楼盘</a></li>

            </ul>
        </div>


        @if (new byte?[] { (byte)SchoolGrade.PrimarySchool, (byte)SchoolGrade.JuniorMiddleSchool }.Contains(Model.Grade) && Model.Type == (byte)SchoolType.Public)
        {
            <div class="counterpart-school-list position-absolute font-15">
                <p>共<span>@(((List<KeyValueDto<Guid>>)ViewBag.CounterPart).Count())</span>所</p>
                <ul>
                    @if (ViewBag.CounterPart is List<KeyValueDto<Guid>> list && list.Count > 0)
                    {
                        @foreach (var item in list)
                        {
                            <li>
                                <a href="/school-@ProductManagement.Framework.Foundation.UrlShortIdUtil.Long2Base32(item.Other)?.ToLower()/">
                                    <div class="school-name">@(item.Key)</div>
                                    <p class="school-address font-12">@(item.Message)</p>
                                </a>
                            </li>
                        }
                    }
                </ul>
            </div>
        }
    </div>

    @if (Model.Type == (byte)SchoolType.Public && !string.IsNullOrWhiteSpace(Model.Range))
    {
        if (Model.Grade == (byte)SchoolGrade.PrimarySchool || Model.Grade == (byte)SchoolGrade.JuniorMiddleSchool)
        {
            <div class="text-content rangePart">
                <p>@(Html.Raw(Model.Range?.Replace("\r\n", "</br>").Replace("\n", "</br>")))</p>
            </div>
        }
    }

    @if (Model.Grade == (byte)SchoolGrade.PrimarySchool)
    {
        if (!string.IsNullOrEmpty(Model.AfterClass))
        {
            <div class="text-content rangePart">
                <h2 class="font-20 font-weight-bold">课后管理</h2>
                <p>@(Html.Raw(Model.AfterClass.Replace("\r\n", "</br>").Replace("\n", "</br>")))</p>
            </div>
        }

    }
    @if (Model.ExperienceVideos.Count > 0)
    {
        <div class="video" id="video">
            <h2 class="font-20 font-weight-bold">线上体验课程</h2>
            <ul class="video-list d-flex flex-wrap">
                @foreach (var item in Model.ExperienceVideos)
                {
                    <li>
                        <video src="@item.Value" controls></video>
                    </li>
                }
            </ul>
        </div>
    }
    @await Component.InvokeAsync("RecommendSchool", ViewBag.ExtId)
    @*导航栏*@
    @{ await Html.RenderPartialAsync("QuickNavigation");}
</div>

@*隐藏input*@
<input type="hidden" id="Latitude" value="@Model.Latitude" />
<input type="hidden" id="Longitude" value="@Model.Longitude" />
<input type="hidden" id="Range" value="" />
<input type="hidden" id="Build" value="@(ViewBag.Build)" />
@*<input type="hidden" id="RangePoints" value="@(ViewBag.RangePoints)" />*@
<input type="hidden" value="@Model.ExtId" class="dataId">

@* 右侧内容 *@
<div class="right-list">
    <!-- 课程卡片广告 start -->
    <div class="course-adv-wrapper"></div>
    <!-- 课程卡片广告 end -->
    <!-- 广告开始 -->
    <div class="mkt-box" id="rightBanner">
        <div class="swiper-container swiper-mkt swiperSchoolAd" data-id="@Model.ExtId" alt="24" data-autos="24" id="swiperSchoolAd-24" style="height: 205px;">
            <div class="swiper-wrapper">
            </div>
            <div class="swiper-pagination mkt-pagination"></div>
        </div>
    </div>
    <!-- 广告结束 -->
    <!-- 这是预约探校表单部分的开始 -->
    @await Component.InvokeAsync("SchoolActivity", ViewBag.ExtId)
    <!-- 这是预约探校表单部分的结束 -->
    <div class="hot-goods"></div>
    @await Component.InvokeAsync("OrgLesson", ViewBag.Grade)
    @await Component.InvokeAsync("PaidQA", ViewBag.Grade)
    @await Component.InvokeAsync("RelatedSchool", ViewBag.ExtId)
</div>

@section script{
    <script src="@(ViewBag.StaticFile)/js/viewer.min.js"></script>
    <script src="@(ViewBag.StaticFile)/js/baseFun/gallery.js"></script>
    <script src="@(ViewBag.StaticFile)/js/school-detail/swiperAd.js"></script>
    @*<script src="@(ViewBag.StaticFile)/js/jquery-3.4.0.min.js"></script>*@
    <script src="https://webapi.amap.com/maps?v=1.4.15&key=61ce686ba30069e6801cda4be2f719a2&plugin=AMap.Geocoder&plugin=AMap.CitySearch"></script>
    <script src="@(ViewBag.StaticFile)/js/school-detail/schoolDetailMessage.js"></script>
    @*<script src="https://h5wkui.sxkid.com/js/school-detail/schoolDetailMessage.js"></script>*@
    <script src="@(ViewBag.StaticFile)/js/jquery.cookie.js"></script>
    <script>
        $(function () {
            //...
        });
    </script>
}