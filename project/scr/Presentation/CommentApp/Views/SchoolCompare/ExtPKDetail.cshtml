<body>
    <header class="header flex justify-content-between">
        <a class="arrow"></a>
        <span class="header-title">PK详情</span>
        <span class=""></span>
    </header>

    <section class="mt">
        <div class="school-name flex justify-content-between">
            <div>
                <h5>@(ViewBag.fName)</h5>
                <ul class="tag flex text-center">
