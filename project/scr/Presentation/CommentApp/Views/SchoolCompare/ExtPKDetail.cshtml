                <div>
                    @if (ViewBag.fQuestionTotalCount > 0)
                    {
                        <h6>@(ViewBag.fQuestionTotalCount) 条问题</h6>
                    }
                    else
                    {
                        <h6>0条问题</h6>
                    }

                    <ul class="flex">
                        @if (ViewBag.fcollquestionCount > 0)
                        {
                            <li>@(ViewBag.fcollquestionCount)<span>关注</span></li>
                        }
