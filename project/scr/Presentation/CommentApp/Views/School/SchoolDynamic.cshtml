@model IEnumerable<Sxb.Web.ViewModels.Article.ArticleListItemViewModel>
@{
    Layout = "~/views/Shared/_op_layout.cshtml";
    ViewBag.Title = "学校动态";
}

@section Styles{
    <link rel="stylesheet" href=" @ViewBag.StaticFile/css/school-dynamic.css">
}

<header class="header flex justify-content-between">
    <a class="arrow"></a>
    <span class="header-title">学校动态</span>
    <span class=""></span>
</header>

<section class="mt">
    <ul class="content-list">
        @foreach (var item in Model)
        {
            <li>
                <a href="@Url.Action("detail","article",new { no = item.No})">
                    <h5>@item.Title</h5>
                    <div class="list-msg">
                        <span>@item.Time</span>
                        <span><i class="icon"></i>@item.ViweCount</span>
                    </div>
                </a>
            </li>
        }
        @*<li class="not-more-data"  id="no-more">没有更多数据</li>*@
    </ul>
</section>

@section Scripts{
    <script src="@ViewBag.StaticFile/js/layout-common.js"></script>
    <script src="@ViewBag.StaticFile/js/pullScroll/pullScroll.js"></script>
    <script>
        var _loaddata_lock = false;
        var offset = @ViewBag.Offset;
        var limit = @ViewBag.Limit;
        var schoolId = '@ViewBag.SchoolId';
        var total = @ViewBag.Total;
        var content_list = $('.content-list');
        //var noMore = $('#no-more');

        window.ItemTemplate = function (item) {
            var template = "";
            template += ' <li> ';
            template += '    <a href="/article/' + item.no + '.html"> ';
            template += '        <h5>' + item.title + '</h5> ';
            template += '        <div class="list-msg"> ';
            template += '            <span>' + item.time + '</span> ';
            template += '            <span><i class="icon"></i>' + item.viweCount + '</span> ';
            template += '        </div> ';
            template += '    </a> ';
            template += '</li> ';
            return template;
        }

        window.LoadDatas = function (params, success) {
            //Guid schoolId, int offset = 0, int limit = 20
            if (this._loaddata_lock) {
                return;
            }
            this._loaddata_lock = true;
            $.ajax({
                url: '/article/ListSchoolDynamic',
                type: 'get',
                data: params,
                success: success,
                complete: function (res) {
                    _loaddata_lock = false;
                }
            })
        }

        function pullUp() {

            if (offset >= total) {
                return; //已经到底了，不作任何处理
            }
            $.loading();
            var offset_temp = offset + limit;
            LoadDatas({
                schoolId: schoolId,
                offset: offset_temp,
                limit: limit
            }, (res) => {
                $.loading('remove');
                if (res.status == 1) {
                    var list = res.data.list;
                    total = res.data.total; //更新总量
                    offset = offset_temp;  //增加偏移量
                    if (list.length > 0) {
                        $.each(list, function (index, value) {
                            var listItem = ItemTemplate(value);
                            content_list.append(listItem);
                        });
                    } else {
                        //noMore.show();
                    }

                } else {
                    alert(res.msg)
                }
            });

        }

        function pullDown() {

        }

        function init() {
        //    if ((offset + limit) < total) {
        //        noMore.hide();
        //    } else {
        //        noMore.show();
        //    }
        }

        $(document).ready(function () {
            init();
            pullScroll.listen(pullUp, pullDown);

        });
    </script>

}