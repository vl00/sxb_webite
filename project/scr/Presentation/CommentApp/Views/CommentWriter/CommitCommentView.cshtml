
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta name="applicable-device" content="mobile">
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, viewport-fit=cover">
    
    <title>写点评-上学帮</title>
    <link rel="stylesheet" href="@ViewBag.StaticFile/css/common.css">
    <link rel="stylesheet" href="@ViewBag.StaticFile/css/comment.css">
    <link rel="stylesheet" href="@ViewBag.StaticFile/css/search.css">
    <link rel="stylesheet" href="@ViewBag.StaticFile/css/swiper.min.css">
    <link rel="stylesheet" href="@ViewBag.StaticFile/css/comment-and-qa.css" />
</head>
<body style="font-size:16px;">
    <header class="header flex justify-content-between">
        <a class="arrow"></a>
        <span class="header-title">写点评-上学帮</span>
        <span class="btn"></span>
    </header>
    <section class="comment mt" style="padding-top: .01rem;">
        <div>
            <h5 class="school-name flex justify-content-between">
                <span current-Schoold="@ViewBag.SchoolId" data-schoolId="@ViewBag.CurrentSchool.SchoolSectionId">@ViewBag.CurrentSchool.SchoolName</span>
                <i class="arrow"></i>
            </h5>
            <ul class="drop-down">
                <li class="active" data-isschool="1" data-schoolId="@ViewBag.CurrentSchool.SchoolSectionId">@ViewBag.CurrentSchool.SchoolName</li>
                @foreach (var item in ViewBag.AllSchoolBranch)
                {
                    <li data-isschool="1" data-schoolId="@item.SchoolSectionId">@item.SchoolName</li>
                }
                <li data-isschool="0">其他学校</li>
            </ul>
        </div>
        <div class="search-content">
            <div class="flex">
                <div class="search-input">
                    <input type="text" placeholder="请输入学校名称">
                    <i class="reset-input"></i>
                </div>
                <span class="text-center">取消</span>
            </div>
            <ul class="search-list">
            </ul>
        </div>
        <div class="radio">
            <h5 class="title">您或您的孩子读过该校吗？</h5>
            <ul class="select flex">
                <li data-type="1">已入读</li>
                <li data-type="0">未入读</li>
            </ul>
        </div>
    </section>
    <section class="write-comment">
        <div class="part1">
            <!-- 未入读 -->
            <div class="appraise">
                <h5 class="title">您对该校的评价</h5>
                <ul class="star flex">
                    <li class="score-star"><i class="icon"></i></li>
                    <li class="score-star"><i class="icon"></i></li>
                    <li class="score-star"><i class="icon"></i></li>
                    <li class="score-star"><i class="icon"></i></li>
                    <li><i class="icon"></i></li>
                </ul>
                <p class="tips text-center flex justify-content-between">点击星星评分</p>
            </div>
            <!-- 已入读 -->
            <div class="detail-appraise">
                <h5 class="title flex">
                    您对该校的评价
                    <div style="display:none;">
                        <ul class="school-score flex">
                            <li><i class="icon"></i></li>
                            <li><i class="icon"></i></li>
                            <li><i class="icon"></i></li>
                            <li><i class="icon"></i></li>
                            <li><i class="icon"></i></li>
                        </ul>
                    </div>
                </h5>
                <div class="teacher flex">
                    <span>师资力量</span>
                    <ul class="list flex">
                        <li><i class="icon"></i></li>
                        <li><i class="icon"></i></li>
                        <li><i class="icon"></i></li>
                        <li><i class="icon"></i></li>
                        <li><i class="icon"></i></li>
                    </ul>
                    <span class="notes"></span>
                </div>
                <div class="facilities flex">
                    <span>硬件设施</span>
                    <ul class="list flex">
                        <li><i class="icon"></i></li>
                        <li><i class="icon"></i></li>
                        <li><i class="icon"></i></li>
                        <li><i class="icon"></i></li>
                        <li><i class="icon"></i></li>
                    </ul>
                    <span class="notes"></span>
                </div>
                <div class="environment flex">
                    <span>周边环境</span>
                    <ul class="list flex">
                        <li><i class="icon"></i></li>
                        <li><i class="icon"></i></li>
                        <li><i class="icon"></i></li>
                        <li><i class="icon"></i></li>
                        <li><i class="icon"></i></li>
                    </ul>
                    <span class="notes"></span>
                </div>
                <div class="manage flex">
                    <span>校风管理</span>
                    <ul class="list flex">
                        <li><i class="icon"></i></li>
                        <li><i class="icon"></i></li>
                        <li><i class="icon"></i></li>
                        <li><i class="icon"></i></li>
                        <li><i class="icon"></i></li>
                    </ul>
                    <span class="notes"></span>
                </div>
                <div class="life flex">
                    <span>校园生活</span>
                    <ul class="list flex">
                        <li><i class="icon"></i></li>
                        <li><i class="icon"></i></li>
                        <li><i class="icon"></i></li>
                        <li><i class="icon"></i></li>
                        <li><i class="icon"></i></li>
                    </ul>
                    <span class="notes"></span>
                </div>
                <p class="tips text-center flex justify-content-between">点击表情评分</p>
            </div>
            <div class="comment-content">
                <textarea name="" id="" cols="30" rows="8" placeholder="亲，学校好不好？好在哪？孩子就读体验怎样？马上和更多家长分享您的见解，还可使用标签评价学校哦！"></textarea>
                <p class="tips">写30个字，有机会被采纳为精选点评哦！</p>

            </div>
            <div class="upload-img flex">
                <form>
                    <ul class="img-list flex" data-isUploadImage="false">
                        <li class="upload-btn text-center" data-isUploadImage="false">
                            <img src="" alt="">
                            <span style="">
                                <p><i class="icon"></i></p>
                                <p>上传照片</p>
                            </span>
                            <input type="file" name="image" accept="image/*">
                        </li>
                    </ul>
                </form>
            </div>
            <div class="impression">
                <h5 class="title">您对该校的印象</h5>
                <ul class="impression-list flex text-center">
                    <li data-tagId="E7814553-0FAA-4FEC-AD92-91E4AC0C847E">生源好</li>
                    <li data-tagId="098FF19D-973C-4619-BB27-6033F4D4B2F9">活动丰富</li>
                    <li data-tagId="F9AB1C92-3311-4968-A836-4ECCEB20A52D">校风良好</li>
                    <li data-tagId="E1DD9B42-56F8-4E7E-B91E-30FE1FB9D310">交通便捷</li>
                    <li data-tagId="229F914D-A5AA-4C5F-815E-303F405A4F3A">成绩优秀</li>
                    <li class="add">
                        <span>＋</span>
                        <input type="text">
                    </li>
                </ul>
            </div>
        </div>
        <div class="part2">
            @if (ViewBag.isSchoolRole)
            {
                <div class="school-refuting">
                    <div class="flex justify-content-between">
                        <h5 class="title">学校辟谣 <i class="icon"></i></h5>
                        <span class="round"><i></i></span>
                    </div>
                    <div class="tips">选择学校辟谣后，学校将会在点评界面见到醒目的学校辟谣LOGO，并且该条点评自动置顶。</div>
                </div>
            }
            <div class="anonymous">
                <div class="flex justify-content-between">
                    <h5 class="title">匿名评价 <i class="icon"></i></h5>
                    <span class="round"><i></i></span>
                </div>
                <div class="tips">选择匿名点评后，学校将无法获取你的个人信息以便进一步反馈。</div>
            </div>
        </div>
    </section>
    <section class="submit-btn text-center">
        <a id="commitComment">提交评论</a>
    </section>

