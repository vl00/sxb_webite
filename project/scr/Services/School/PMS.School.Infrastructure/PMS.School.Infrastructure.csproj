<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>7.3</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Dapper" Version="2.0.30" />
    <PackageReference Include="System.Data.SqlClient" Version="4.6.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
  </ItemGroup>

  <PropertyGroup>
    <libs_plat Condition="'$(OS)' == 'Windows_NT'">win</libs_plat>
    <libs_plat Condition="'$(libs_plat)' == ''">linux</libs_plat>    
  </PropertyGroup>
  <ItemGroup>
    <Content Condition="'$(Platform)'=='AnyCPU' or '$(Platform)'=='x64'" Include="..\..\..\..\libs\$(libs_plat)\x64\SqlServerSpatial140.dll">
      <Link>SqlServerSpatial140.dll</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <Reference Include="Newtonsoft.Json">
      <HintPath>C:\Program Files\dotnet\sdk\NuGetFallbackFolder\newtonsoft.json\9.0.1\lib\netstandard1.0\Newtonsoft.Json.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
